{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,

		"target": "es2022",
		"lib": ["es2022"],
		"module": "Node16",
		"moduleResolution": "Node16",

		"strict": true,

		"declaration": true,
		"emitDeclarationOnly": true,
		"rootDir": "src",
		"outDir": "out"
	},
	"files": [
		"src/index.js",
		"src/json.js",
		"src/v1-compat.js",
		"src/dessert.js"
	],
	"include": ["src/**/*"],
	"exclude": ["test/**/*"]
}
